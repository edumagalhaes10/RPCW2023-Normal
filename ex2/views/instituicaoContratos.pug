extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Instituicão #{slist[0].NomeInstituicao} - NIPC = #{slist[0].NIPCInstituicao} 
      h3 Contratos de Empregos Científicos
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Data Inicio Contrato
          th Data Fim Contrato
          th Nome Titular Contrato
          th Area Investigacao
        
        each s in slist
          tr
            td
              a(href="/"+s.id)= s.id
            td= s.DataInicioContrato
            td= s.DataFimContrato
            td= s.NomeTitularContrato
            td= s.AreaCNAEF
            //- td
            //-   button.w3-btn.w3-round.w3-indigo.w3-margin-right  
            //-     a(href="/alunos/delete/"+s.id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return to Main Page]
    